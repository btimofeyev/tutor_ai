# ============================================
# KlioAI Child Frontend Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Backend API Configuration
# Development: http://localhost:5000
# Production: https://api.klioai.com
NEXT_PUBLIC_API_URL=https://api.klioai.com

# Application Configuration
NEXT_PUBLIC_APP_NAME="Klio AI"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_SPEECH_OUTPUT=true
NEXT_PUBLIC_ENABLE_WORKSPACE=true

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=7200000  # 2 hours in milliseconds
NEXT_PUBLIC_REFRESH_TOKEN_INTERVAL=3300000  # 55 minutes in milliseconds

# Supabase Configuration (if direct access needed)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key