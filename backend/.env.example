# ============================================
# Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Server Configuration
NODE_ENV=production  # Options: development, production, test
PORT=5000
LOG_LEVEL=info  # Options: error, warn, info, debug

# Database (Supabase)
# CRITICAL: Service role key bypasses Row Level Security - use with extreme caution
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key  # ADMIN ONLY - bypasses RLS
SUPABASE_ANON_KEY=your_supabase_anon_key  # Public key - respects RLS policies

# Authentication - CRITICAL: Generate a strong secret
JWT_SECRET=generate_a_secure_random_string_at_least_32_characters
# Generate with: openssl rand -base64 32

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# MCP Server Configuration (optional)
MCP_ENABLED=false
MCP_SERVER_PATH=your_mcp_server_path
MCP_SERVER_URL=http://localhost:3006

# CORS Configuration - Add your production domains
FRONTEND_URL=https://klioai.com
ALLOWED_ORIGINS=https://klioai.com,https://www.klioai.com,https://app.klioai.com